<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.jiiiiiin.module.common.mapper.mngauth.InterfaceMapper">

    <!-- 开启二级缓存 -->
    <cache type="org.mybatis.caches.ehcache.LoggingEhcache"/>

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.jiiiiiin.module.common.entity.mngauth.Interface">
        <result column="id" property="id" />
        <result column="url" property="url" />
        <result column="name" property="name" />
        <result column="method" property="method" />
        <result column="description" property="description" />
        <result column="status" property="status" />
        <result column="channel" property="channel" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,
        url, name, method, description, status, channel
    </sql>

    <delete id="deleteRelationRecords">
        delete from mng_resource_interface
        where interface_id IN
        <foreach collection="idList" item="outputId" open="(" separator="," close=")">
            #{outputId}
        </foreach>
    </delete>

    <select id="selectByResourceId" resultType="cn.jiiiiiin.module.common.entity.mngauth.Interface">
        select name, url, method from mng_interface i
          left join mng_resource_interface ri on ri.interface_id = i.id
          where ri.resource_id = #{resourceId}
    </select>

</mapper>
